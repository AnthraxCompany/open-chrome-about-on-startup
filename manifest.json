{
  "manifest_version": 3,
  "name": "Open Chrome Help on Startup",
  "version": "1.0.2",
  "description": "Chrome 起動時または拡張アイコンをクリックしたときに chrome://settings/help を新しいタブで自動的に開きます。",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/cat16.png",
    "48": "icons/cat48.png",
    "128": "icons/cat128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/cat16.png",
      "32": "icons/cat128.png"
    },
    "default_title": "Open Chrome Help"
  }
}
